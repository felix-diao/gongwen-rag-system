# 应用配置
APP_NAME=公文大模型RAG系统
APP_VERSION=1.0.0
DEBUG=false

# 数据库配置
DATABASE_URL=postgresql://gongwen_user:your_password@localhost:5432/gongwen_rag

# Milvus 配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=

# 向量维度
EMBEDDING_DIM=1024

# LLM 配置
LLM_API_URL=http://your-llm-service:8000/v1/chat/completions
LLM_API_KEY=your-api-key-here
LLM_MODEL=gongwen-llm-v1

# Embedding 配置
EMBEDDING_API_URL=http://your-embed-service:8001/v1/embeddings
EMBEDDING_MODEL=gongwen-embed-v1

# JWT 配置
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 文件存储
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600

# RAG 配置
DEFAULT_TOP_K=6
PUBLIC_WEIGHT=0.6
PRIVATE_WEIGHT=0.4
CONVERSATION_WEIGHT=0.3

# 分块配置
CHUNK_SIZE=500
CHUNK_OVERLAP=50